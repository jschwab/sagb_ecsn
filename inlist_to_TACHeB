&star_job

! begin with saved pre-main sequence model
      load_saved_model = .true.
      saved_model_name = '10.0M_pre_ms.mod'

! save a model at the end of the run
      save_model_when_terminate = .true.
      save_model_filename = '10.0M_TACHeB.mod'

! start counters
      set_initial_age = .true.
      initial_age = 0
      set_initial_model_number = .true.
      initial_model_number = 0
      set_initial_cumulative_energy_error = .true.
      new_cumulative_energy_error = 0d0

! display on-screen plots
      pgstar_flag = .true.

/ !end of star_job namelist


&controls

      ! little bit of overshoot
      overshoot_scheme(1) = 'exponential'
      overshoot_zone_type(1) = 'any'
      overshoot_zone_loc(1) = 'any'
      overshoot_bdy_loc(1) = 'any'
      overshoot_f(1) = 0.014
      overshoot_f0(1) = 0.004

! stopping criterion
      xa_central_lower_limit_species(1) = 'he4'
      xa_central_lower_limit(1) = 1d-5

/ ! end of controls namelist


&pgstar

      ! more frequent output
      pgstar_interval = 10
      Grid1_file_interval = 10

/ ! end of pgstar namelist
